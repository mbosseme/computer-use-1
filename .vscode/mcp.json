{
  "servers": {
    "playwright": {
      "command": "npx",
      "args": [
        "--yes",
        "--package",
        "@playwright/mcp@latest",
        "mcp-server-playwright",
        "--user-data-dir",
        "runs/<RUN_ID>/playwright-profile",
        "--output-dir",
        "runs/<RUN_ID>/playwright-output"
      ]
    }
  }
}
